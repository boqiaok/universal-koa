{
  "name": "react-webpack-test",
  "version": "1.0.0",
  "description": "koa2 react redux ssr react-router-v4",
  "main": "index.js",
  "scripts": {
    "dev": "node ./config/devServer.js",
    "cilent": "node ./config/devServer.js",
    "server": "nodemon",
    "build:dll": "cross-env NODE_ENV=production webpack --config ./config/webpack.config.dll.js --progress",
    "build:client": "webpack --config ./config/webpack.config.prod.js --progress",
    "build:server": "cross-env BABEL_ENV=node babel -D client -d bin/client && babel -D server -d bin/server",
    "build": "npm run clean && npm run build:dll && npm run build:client && npm run build:server",
    "start": "cross-env NODE_ENV=production node ./bin/server/",
    "api": "cross-env NODE_ENV=development BABEL_ENV=node babel-node index.js",
    "prod": "cross-env NODE_ENV=production pm2 start ./bin/server/",
    "stop": "pm2 stop all",
    "clean": "npm run clean:client && npm run clean:server",
    "clean:client": "rimraf ./public/*",
    "clean:server": "rimraf ./bin",
    "fix": "standard --fix",
    "precommit": "lint-staged",
    "test": "standard client/src/**/*.js server/**/*.js"
  },
  "author": "boqiao   boqiaok@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "add-asset-html-webpack-plugin": "^2.1.2",
    "assets-webpack-plugin": "^3.5.1",
    "autoprefixer": "^7.1.6",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-css-modules-transform": "^1.2.7",
    "babel-plugin-import": "^1.6.2",
    "babel-plugin-transform-assets": "^0.2.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-require-ignore": "^0.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "bcrypt": "^1.0.3",
    "bluebird": "^3.5.1",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "css-modules-require-hook": "^4.2.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "fs-extra": "^4.0.2",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-helmet": "^3.2.0",
    "koa-log4": "^2.2.1",
    "koa-multer": "^1.0.2",
    "koa-router": "^7.2.1",
    "koa-session": "^5.5.0",
    "koa-static": "^4.0.1",
    "lint-staged": "^5.0.0",
    "node-sass": "^4.6.0",
    "nodemon": "^1.12.1",
    "path": "^0.12.7",
    "pm2": "^2.7.2",
    "postcss-easysprites": "^0.1.8",
    "postcss-loader": "^2.0.8",
    "precss": "^2.0.0",
    "react-hot-loader": "^3.1.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "standard": "^10.0.3",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.8.1",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-dev-server": "^2.9.3",
    "webpack-hot-middleware": "^2.20.0"
  },
  "dependencies": {
    "antd": "^2.13.8",
    "axios": "^0.17.0",
    "echarts": "^3.7.2",
    "immutable": "^3.8.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-immutable": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.0",
    "redux-thunk": "^2.2.0"
  },
  "standard": {
    "ignore": [
      "/logs/",
      "/node_modules",
      "/public/",
      "/uploads",
      "/bin",
      "/config"
    ],
    "parser": "babel-eslint"
  },
  "lint-staged": {
    "client/src/**/*.js": ["standard --fix", "git add"],
    "server/**/*.js": ["standard --fix", "git add"],
    "config/**/*.js": ["standard --fix", "git add"]
  }
}
